{
  "name": "nyaya-logic-legal-fortress",
  "version": "1.0.0",
  "private": true,
  "main": "electron.js",
  "description": "A specialized, offline-first legal case management system designed for Indian High Court practitioners.",
  "author": "Adv Rushikesh R Mahajan",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "make-app": "npm run build && electron-builder build",
    "mac-app": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^4.9.5",
    "vite": "^5.1.4"
  },
  "build": {
    "appId": "com.nyayalogic.app",
    "productName": "Nyaya-Logic",
    "files": [
      "build/**/*",
      "electron.js"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}